{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "../..",
    "outDir": "../../dist/out-tsc",
    "types": [
      "node",
    ]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../libs/**/*.ts",
    "../../libs/**/*.tsx",
    "src/index.ts",
    "../../libs/ui/tailwind.config.js"
  ]
}